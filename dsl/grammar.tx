Contract:
    ('derive' derived+=ID[','])?
    ('include' included+=Feature[','])?
    ('extend' 'with' fields+=Field[','])?
    modifiers*=Modifier
;

Modifier:
    'modify' function=ID 'with' modifier=ID
;

Feature:
    name=ID ('(' params+=Parameter[','] ')')?
;

Parameter:
    STRING | INT
;

Field:
    type=SolidityType name=ID
;

SolidityType[noskipws]:
    /\s*/ name=Type (size=INT)?
;

Type:
    'uint' | 'int' | 'address' | 'bool' | 'string' | 'hash' | 'byte'
;

Comment:
    /\/\/.*$/
;